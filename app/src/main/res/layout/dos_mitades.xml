<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="66dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="528dp"
        android:backgroundTint="#5AE4A8"
        android:text="Solucionar"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="76dp"
        android:layout_marginTop="1dp"
        android:background="#5AE4A8"
        android:gravity="center"
        android:text="Dos mitades"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="409dp"
        android:layout_height="308dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:lineSpacingExtra="8dp"
        android:text="Hola alejing@gmail.com,\n\nTe voy a ayudar a solucionar el problema de las 2 mitades.\n\n1. Ingresa una cadena de caracteres.\n2. Te ayudaré a cortar la cadena en dos partes &quot;iguales&quot; (si la longitud de la cadena es impar, colocaré el carácter central en la primera cadena, de modo que la primera cadena contenga un carácter más que la segunda).\n3. Luego imprimiré la nueva cadena en una sola fila con la primera y la segunda mitad intercambiadas (la segunda mitad es la primera y la primera mitad es la segunda)."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="408dp"
        android:layout_height="125dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="720dp"
        android:background="#5AE4A8"
        android:backgroundTint="#5AE4A8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="792dp"
        android:text="Quitar fragmento"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="792dp"
        android:text="Dos palabras"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dos_mitades"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="728dp"
        android:backgroundTint="#5AE4A8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dosmitadeslogo" />

    <ImageButton
        android:id="@+id/dos_palabras"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="732dp"
        android:backgroundTint="#5AE4A8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dospalabraslogo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="792dp"
        android:text="Dos mitades"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/quitar_fragmento"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="732dp"
        android:backgroundTint="#5AE4A8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quitarfragmentologo" />

    <TextView
        android:id="@+id/mostrar_dos"
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="636dp"
        android:gravity="center"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botonequis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="327dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#5AE4A8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/equis" />


</androidx.constraintlayout.widget.ConstraintLayout>